{
    "version": 2,
    "builds": [
        {
            "src": "api/**/*.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "50mb"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/$1",
            "methods": [
                "GET",
                "POST",
                "OPTIONS",
                "PUT",
                "DELETE",
                "PATCH"
            ]
        }
    ]
}